// Custom testbench

`timescale 1ns / 1ps

module main_tb;

  reg clk;
  reg por;
  
  wire osc_en;
  wire pmod_cat;
  wire [6:0] pmod_segment;
  wire pmod_oe;

  top dut(.i_clk_50mhz(clk),
       .i_por(por),
       .pmod_cat(pmod_cat),
       .pmod_segment(pmod_segment),
       .pmod_oe(pmod_oe)
       );

  initial begin

    $dumpfile ("main_tb.vcd");
    $dumpvars (0, main_tb);

    forever #10 clk = ~clk;
  end
  
  initial begin
  assign por = 1'b1;
  clk = 1'b0;
  #30
  assign por = 1'b0;
  #30
  
  #1000;
  
  end

endmodule
